form.contact-form(action="javascript:void(0)")
	.form-floating.mb-3.w-50
		input.form-control.bottom-border(name = "krestni_jmeno" type='text' autocomplete="given-name" required)
		label.required() Křestní jméno
	.form-floating.mb-3.w-50
		input.form-control.bottom-border(name = "prijmeni" type='text' autocomplete="family-name" required)
		label.required() Příjmení
	.form-floating.mb-3.w-50
		input.form-control.bottom-border(name="email" type='email' required autocomplete="email")
		label.required() Email
	.form-floating.mb-3.w-50
		input.form-control.bottom-border(name="telefon" type='phone' autocomplete="tel")
		label() Telefon    
	.form-floating.mb-3.w-100
		textarea.form-control.bottom-border(name="message" rows="5" type='text' placeholder='' required)
		label.required() Váše zpráva
	.form-floating.mb-3.w-100
		.form-check
			input.form-check-input(name="gdpr" type='checkbox' value='' required)
			label.required.form-check-label() Souhlas se zpracováním osobních údajů
